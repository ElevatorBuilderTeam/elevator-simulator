      <Button layoutX="218.0" layoutY="203.0" mnemonicParsing="false" onAction="#removeScenarioClicked"
              text="Remove Scenario" textFill="#ab1616"/>
      <Label fx:id="scenarioFileName" layoutX="390.0" layoutY="350.0" text="No Scenarios Loaded" textAlignment="CENTER">
         <font>
            <Font size="14.0"/>
         </font>
      </Label>
      <Label layoutX="62.0" layoutY="291.0" text="Visitors Per Minute" textAlignment="CENTER"/>
      <CheckBox fx:id="appendScenriosCheckBox" layoutX="535.0" layoutY="386.0" mnemonicParsing="false"
                text="Append Scenarios"/>
   </children>
</AnchorPane>
