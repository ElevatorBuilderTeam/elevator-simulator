<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane id="AnchorPane" fx:id="anchorPane" prefHeight="433.0" prefWidth="689.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="elevatorsimulation.Controllers.SimulationEditorWindowController">
   <children>
      <ListView fx:id="scenarioListView" layoutX="14.0" layoutY="37.0" prefHeight="206.0" prefWidth="188.0" />
      <TextField fx:id="scenarioName" layoutX="195.0" layoutY="250.0" />
      <Label layoutX="85.0" layoutY="255.0" text="Scenario Name" textAlignment="CENTER"/>
      <TextField fx:id="numOfPassengers" layoutX="195.0" layoutY="286.0" prefHeight="27.0" prefWidth="46.0" />
      <Label fx:id="scenarioInformation" layoutX="242.0" layoutY="42.0"/>
      <Label layoutX="16.0" layoutY="327.0" text="Number Of Elevator Banks"/>
      <TextField fx:id="numOfElevatorBanks" layoutX="195.0" layoutY="322.0" prefHeight="27.0" prefWidth="46.0" />
      <Button layoutX="553.0" layoutY="50.0" mnemonicParsing="false" onAction="#runScenarioClicked" text="Run Scenario" textFill="#4870c7" />
      <TextField fx:id="numOfFloors" layoutX="195.0" layoutY="359.0" prefHeight="27.0" prefWidth="46.0" />
      <Label layoutX="70.0" layoutY="360.0" text="Number Of Floors"/>
